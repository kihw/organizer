{
  "name": "dofus-organizer",
  "version": "0.1.0",
  "description": "A modern cross-platform Dofus Window Organizer with keyboard shortcuts, window management, and navigation dock",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "build-mac": "electron-builder --mac",
    "build-all": "electron-builder -mwl",
    "dist": "npm run build-all",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist",
    "test": "jest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "dofus", 
    "organizer", 
    "window-manager", 
    "gaming", 
    "multiboxing",
    "electron",
    "cross-platform"
  ],
  "author": {
    "name": "Dofus Organizer Team",
    "email": "support@dofus-organizer.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/kihw/organizer",
  "repository": {
    "type": "git",
    "url": "https://github.com/kihw/organizer.git"
  },
  "bugs": {
    "url": "https://github.com/kihw/organizer/issues"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0",
    "eslint": "^8.57.0",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "i18next": "^23.7.6"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "build": {
    "appId": "com.dofus.organizer",
    "productName": "Dofus Organizer",
    "copyright": "Copyright Â© 2024 Dofus Organizer Team",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "locales/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icons/organizer.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}-${os}.${ext}",
      "publisherName": "Dofus Organizer Team"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icons/organizer.png",
      "category": "Game",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "desktop": {
        "Name": "Dofus Organizer",
        "Comment": "Window organizer for Dofus multi-accounting",
        "Keywords": "dofus;window;organizer;gaming;",
        "StartupWMClass": "dofus-organizer"
      }
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icons/organizer.icns",
      "category": "public.app-category.games",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": false,
      "installerIcon": "assets/icons/organizer.ico",
      "uninstallerIcon": "assets/icons/organizer.ico",
      "license": "LICENSE",
      "warningsAsErrors": false,
      "displayLanguageSelector": true,
      "installerLanguages": ["en_US", "fr_FR", "de_DE", "es_ES", "it_IT"]
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "artifactName": "${productName}-${version}.${ext}",
      "background": "assets/dmg-background.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "kihw",
      "repo": "organizer"
    }
  }
}