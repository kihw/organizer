{
  "name": "dofus-organizer-windows",
  "version": "1.0.0",
  "description": "Dofus Window Organizer for Windows - Converted from AutoIt",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-portable": "electron-builder --win portable",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": ["dofus", "organizer", "window-manager", "gaming", "windows"],
  "author": "Dofus Organizer Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "i18next": "^23.7.6",
    "node-window-manager": "^2.2.4"
  },
  "build": {
    "appId": "com.dofus.organizer",
    "productName": "Dofus Organizer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "locales/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icons/organizer.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": false,
      "installerIcon": "assets/icons/organizer.ico",
      "uninstallerIcon": "assets/icons/organizer.ico",
      "license": "LICENSE",
      "warningsAsErrors": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    }
  }
}