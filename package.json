{
  "name": "dofus-organizer-linux",
  "version": "1.0.0",
  "description": "Dofus Window Organizer for Linux - Converted from AutoIt",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": ["dofus", "organizer", "window-manager", "gaming"],
  "author": "Dofus Organizer Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "@arcsine/screen-info": "^1.1.0",
    "active-win": "^8.0.0",
    "electron-store": "^8.1.0",
    "i18next": "^23.7.6"
  },
  "build": {
    "appId": "com.dofus.organizer",
    "productName": "Dofus Organizer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "locales/**/*"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Game",
      "desktop": {
        "StartupWMClass": "dofus-organizer"
      }
    }
  }
}